{
  "settings": {
    "index": {
      "mapping": {
        "total_fields": {
          "limit": "20000"
        }
      },
      "number_of_shards": "1",
      "max_result_window": "10000000",
      "analysis": {
        "analyzer": {
          "suggest_text_search": {
            "filter": [
              "word_delimiter"
            ],
            "tokenizer": "classic"
          },
          "combined_text_analyzer": {
            "filter": [
              "lowercase",
              "asciifolding",
              "word_delimiter",
              "unique"
            ],
            "char_filter": [
              "tsconvert"
            ],
            "tokenizer": "classic"
          },
          "pinyin_analyzer": {
            "tokenizer": "my_pinyin"
          }
        },
        "char_filter": {
          "tsconvert": {
            "convert_type": "t2s",
            "type": "stconvert",
            "keep_both": "false",
            "delimiter": ","
          }
        },
        "tokenizer": {
          "my_pinyin": {
            "lowercase": "true",
            "keep_original": "false",
            "keep_first_letter": "true",
            "keep_separate_first_letter": "true",
            "type": "pinyin",
            "limit_first_letter_length": "16",
            "keep_full_pinyin": "true"
          }
        }
      },
      "number_of_replicas": "1"
    }
  },
  "mappings": {
    "dynamic_templates": [
      {
        "strings": {
          "match_mapping_type": "string",
          "mapping": {
            "ignore_above": 256,
            "type": "keyword"
          }
        }
      }
    ],
    "properties": {
      "_system": {
        "properties": {
          "owner_id": {
            "type": "keyword",
            "ignore_above": 256
          },
          "parent_path": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "categories": {
        "type": "keyword",
        "copy_to": [
          "combined_fulltext"
        ]
      },
      "category": {
        "type": "keyword",
        "copy_to": [
          "combined_fulltext"
        ]
      },
      "combined_fulltext": {
        "type": "text",
        "analyzer": "combined_text_analyzer",
        "index_prefixes": {
          "min_chars": 2,
          "max_chars": 5
        },
        "index_phrases": true
      },
      "content": {
        "type": "text",
        "copy_to": [
          "combined_fulltext"
        ]
      },
      "cover": {
        "type": "object",
        "enabled": false
      },
      "created": {
        "type": "date"
      },
      "disabled": {
        "type": "boolean"
      },
      "icon": {
        "type": "object",
        "enabled": false
      },
      "id": {
        "type": "keyword"
      },
      "lang": {
        "type": "keyword",
        "copy_to": [
          "combined_fulltext"
        ]
      },
      "last_updated_by": {
        "properties": {
          "user": {
            "properties": {
              "avatar": {
                "type": "object",
                "enabled": false
              },
              "userid": {
                "type": "keyword",
                "copy_to": [
                  "combined_fulltext"
                ]
              },
              "username": {
                "type": "keyword",
                "copy_to": [
                  "combined_fulltext"
                ]
              }
            }
          }
        }
      },
      "metadata": {
        "type": "object"
      },
      "owner": {
        "properties": {
          "avatar": {
            "type": "object",
            "enabled": false
          },
          "userid": {
            "type": "keyword",
            "copy_to": [
              "combined_fulltext"
            ]
          },
          "username": {
            "type": "keyword",
            "copy_to": [
              "combined_fulltext"
            ]
          }
        }
      },
      "payload": {
        "type": "object",
        "enabled": false
      },
      "rich_categories": {
        "properties": {
          "icon": {
            "type": "object",
            "enabled": false
          },
          "key": {
            "type": "keyword"
          },
          "label": {
            "type": "keyword",
            "copy_to": [
              "combined_fulltext"
            ]
          }
        }
      },
      "size": {
        "type": "long"
      },
      "source": {
        "properties": {
          "icon": {
            "type": "object",
            "enabled": false
          },
          "id": {
            "type": "keyword"
          },
          "name": {
            "type": "keyword"
          },
          "type": {
            "type": "keyword"
          }
        }
      },
      "subcategory": {
        "type": "keyword",
        "copy_to": [
          "combined_fulltext"
        ]
      },
      "summary": {
        "type": "text",
        "copy_to": [
          "combined_fulltext"
        ]
      },
      "tags": {
        "type": "keyword",
        "copy_to": [
          "combined_fulltext"
        ]
      },
      "thumbnail": {
        "type": "object",
        "enabled": false
      },
      "title": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword"
          },
          "pinyin": {
            "type": "text",
            "analyzer": "pinyin_analyzer"
          }
        },
        "copy_to": [
          "combined_fulltext"
        ]
      },
      "type": {
        "type": "keyword",
        "copy_to": [
          "combined_fulltext"
