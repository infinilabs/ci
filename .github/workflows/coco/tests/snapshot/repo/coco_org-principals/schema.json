{
  "settings": {
    "index": {
      "mapping": {
        "total_fields": {
          "limit": "20000"
        }
      },
      "number_of_shards": "1",
      "max_result_window": "10000000",
      "analysis": {
        "analyzer": {
          "suggest_text_search": {
            "filter": [
              "lowercase",
              "word_delimiter"
            ],
            "tokenizer": "classic"
          },
          "combined_text_analyzer": {
            "filter": [
              "lowercase",
              "asciifolding",
              "word_delimiter",
              "unique"
            ],
            "char_filter": [
              "tsconvert"
            ],
            "tokenizer": "classic"
          },
          "pinyin_analyzer": {
            "tokenizer": "my_pinyin"
          }
        },
        "char_filter": {
          "tsconvert": {
            "convert_type": "t2s",
            "type": "stconvert",
            "keep_both": "false",
            "delimiter": ","
          }
        },
        "tokenizer": {
          "my_pinyin": {
            "lowercase": "true",
            "keep_original": "false",
            "keep_first_letter": "true",
            "keep_separate_first_letter": "true",
            "type": "pinyin",
            "limit_first_letter_length": "16",
            "keep_full_pinyin": "true"
          }
        }
      },
      "number_of_replicas": "1"
    }
  },
  "mappings": {
    "dynamic_templates": [
      {
        "strings": {
          "match_mapping_type": "string",
          "mapping": {
            "ignore_above": 256,
            "type": "keyword"
          }
        }
      }
    ],
    "properties": {
      "_system": {
        "type": "object"
      },
      "created": {
        "type": "date"
      },
      "description": {
        "type": "keyword",
        "copy_to": [
          "combined_fulltext"
        ]
      },
      "id": {
        "type": "keyword"
      },
      "name": {
        "type": "keyword",
        "copy_to": [
          "combined_fulltext"
        ]
      },
      "type": {
        "type": "keyword"
      },
      "updated": {
        "type": "date"
      }
    }
  }
}